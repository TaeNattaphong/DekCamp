<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CampActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hotButton"
            android:layout_width="75dp"
            android:layout_height="110dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="มาแรง"
            android:textSize="20sp" />

        <Button
            android:id="@+id/newButton"
            android:layout_width="71dp"
            android:layout_height="111dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="ล่าสุด"
            android:textSize="20sp" />

        <Button
            android:id="@+id/nearButton"
            android:layout_width="72dp"
            android:layout_height="111dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="ใกล้แล้ว"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button20"
                android:layout_width="match_parent"
                android:layout_height="201dp"
                android:background="#D16F6F" />

            <Button
                android:id="@+id/button21"
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:background="#E4D76D" />

            <Button
                android:id="@+id/button22"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:background="#7ECF76" />

            <Button
                android:id="@+id/button23"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="#78E9D6" />

            <Button
                android:id="@+id/button24"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:background="#5E6DC2" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>